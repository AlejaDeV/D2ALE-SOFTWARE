@model RepuestoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3 style="text-align:center">ELIMINAR REPUESTO</h3>
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="MantenedorRepuesto" method="post">
            <input asp-for="IdRepuesto" type="hidden" class="form-control" />
            <div class="alert alert-danger text-md-center" role="alert">
                <span>¿Esta seguro que desea eliminar el repuesto #@Html.DisplayTextFor(m => m.IdRepuesto) de nombre "@Html.DisplayFor(m => m.NombreRepuesto)" ?</span>
            </div>
            <div class="d-flex justify-content-around">
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash3-fill"></i> Eliminar</button>
                <a asp-action="Listar" asp-controller="MantenedorRepuesto" class="btn btn-warning"><i class="bi bi-arrow-counterclockwise"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>