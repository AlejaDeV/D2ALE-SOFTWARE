@model List<ServicioModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista de Servicios
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="MantenedorServicio" class="btn btn-success"> Crear Servicio</a>
        <hr />  
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>N° Servicio</th>
                    <th>Tipo</th>
                    <th>Descripción</th>
                    <th>Placas Vehículo</th>
                    <th>Nivel Aceite</th>
                    <th>Nivel Refrigerante</th>
                    <th>Nivel Liquido de Dirección</th>
                    <th>Nivel Liquido Frenos</th>
                    <th>Maestro</th>
                    <th>Mecánico Encargado</th>
                    <th>Fecha de Servicio</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.IdServicio</td>
                        <td>@item.TipoServicio</td>
                        <td>@item.Descripcion</td>
                        <td>@item.VehiculoFK</td>
                        <td>@item.NivAceite</td>
                        <td>@item.NivRefrigerante</td>
                        <td>@item.NivLiquidoDireccion</td>
                        <td>@item.NivLiquidoFrenos</td>
                        <td>@item.MaestroFK</td>
                        <td>@item.UsuarioFK</td>
                        <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>                        
                        <td>
                            <a asp-action="Editar" asp-controller="MantenedorServicio" class="btn btn-primary btn-sm" asp-route-idUsuario="@item.IdServicio"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Eliminar" asp-controller="MantenedorServicio" class="btn btn-danger btn-sm" asp-route-idUsuario="@item.IdServicio"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

