@model List<ServicioModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 style="text-align:center">LISTADO DE SERVICIOS</h4>
    </div>
    <div class="card-body">
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <a asp-action="Guardar" asp-controller="MantenedorServicio" class="btn btn-success justify-content-md-end"> Nuevo Servicio <i class="bi bi-plus-lg"></i></a>
        </div>        
        <hr />  
        <table class="table table-bordered">
            <thead class="table-primary">
                <tr class="align-middle">
                    <th>N° Servicio</th>
                    <th>Tipo</th>
                    <th>Descripción</th>
                    <th>Placas Vehículo</th>
                    <th>Nivel Aceite</th>
                    <th>Nivel Refrigerante</th>
                    <th>Nivel Liquido de Dirección</th>
                    <th>Nivel Liquido Frenos</th>                    
                    <th>Mecánico Encargado</th>
                    <th>Fecha de Servicio</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.IdServicio</td>
                        <td>@item.TipoServicio</td>
                        <td>@item.Descripcion</td>
                        <td>@item.VehiculoFK</td>
                        <td>@item.NivAceite</td>
                        <td>@item.NivRefrigerante</td>
                        <td>@item.NivLiquidoDireccion</td>
                        <td>@item.NivLiquidoFrenos</td>                        
                        <td>@item.MecanicoFK</td>
                        <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>                        
                        <td>
                            <a asp-action="Editar" asp-controller="MantenedorServicio" class="btn btn-primary btn-sm" asp-route-IdServicio="@item.IdServicio"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Eliminar" asp-controller="MantenedorServicio" class="btn btn-danger btn-sm" asp-route-IdServicio="@item.IdServicio"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

