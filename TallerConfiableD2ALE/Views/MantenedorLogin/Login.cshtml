@model UsuarioModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/css/login.css" rel="stylesheet" />    
</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="~/img/logod2ale.png" />                
            </div>

            <!-- Login Form -->
            <form action="@Url.Action("Login","MantenedorLogin")" method="post">
                <input type="text" id="login" class="fadeIn second" name="identificacion" placeholder="identificacion">
                <input type="password" id="password" class="fadeIn third" name="contrasena" placeholder="contraseña">
                <input type="submit" class="fadeIn fourth" value="Iniciar sesion">
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a class="underlineHover" href="@Url.Action("Guardar","MantenedorUsuario")">Registrar usuario</a>
            </div>

        </div>
    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>

